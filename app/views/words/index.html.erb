<h1>Listing words</h1>

<table>
  <thead>
    <tr>
      <th>Spell</th>
      <th>Wtype</th>
      <th>Variant</th>
      <th>Translation</th>
      <th>Formation</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.spell %></td>
        <td><%= word.wtype %></td>
        <td><%= word.variant %></td>
        <td><%= word.translation %></td>
        <td><%= word.formation %></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

